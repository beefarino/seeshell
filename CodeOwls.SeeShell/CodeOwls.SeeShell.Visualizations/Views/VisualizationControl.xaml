<UserControl x:Class="CodeOwls.SeeShell.Visualizations.Views.VisualizationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Views="clr-namespace:CodeOwls.SeeShell.Visualizations.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <DockPanel>
        <Views:VisualizationStateSummaryView DataContext="{Binding VisualizationState}" DockPanel.Dock="Top" />
        <Views:VisualizationView x:Name="MainVisualization" DataContext="{Binding Visualization}" />
    </DockPanel>

</UserControl>
